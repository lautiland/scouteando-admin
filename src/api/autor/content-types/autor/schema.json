{
  "kind": "collectionType",
  "collectionName": "autors",
  "info": {
    "singularName": "autor",
    "pluralName": "autors",
    "displayName": "Autor"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Identificador": {
      "type": "uid",
      "private": true,
      "required": true,
      "regex": "^[1-9]\\d*|0$"
    },
    "NombreApodo": {
      "type": "string",
      "required": true,
      "unique": false
    },
    "Apellido": {
      "type": "string",
      "required": true
    },
    "Totem": {
      "type": "string"
    },
    "NumeroDeGrupo": {
      "type": "integer",
      "required": true
    },
    "ColoresDeGrupo": {
      "type": "component",
      "component": "shared.color",
      "repeatable": true,
      "required": true,
      "min": 2,
      "max": 6
    }
  }
}
